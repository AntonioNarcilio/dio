{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "airbnb-base"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "plugins": [
        "@typescript-eslint"
    ],
    "rules": {
      // "react/jsx-filename-extension": [
      //   1,
      //   {
      //     "extensions": [".ts", ".tsx"]
      //   }
      // ],
      "import/no-unresolved": "off",
      "global-require": "off",
      "import/prefer-default-export": "off",
      "prefer-const": "off",
      "import/extensions": [
        "error",
        "ignorePackages",
        {
          "js": "never",
          "mjs": "never",
          "jsx": "never",
          "ts": "never",
          "tsx": "never"
        }
      ]
    },
    "settings": {
      "import/resolver": {
        "node": {
          "extensions": [".js", ".jsx", ".ts", ".tsx", ".json", ".vue"]
        }
      }
    }
}
